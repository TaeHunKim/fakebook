<% if @permission == false %>
  no permission
<% else %>

<tr>
  <td><%= User.find(@post.user_id).email %></td>
  <% if @post.image_id %>
    <div>
      <%= image_tag Image.find(@post.image_id).local %> 
    </div>
  <% end %>
  <td><%= @post.content %></td>
  <td><%= @post.updated_at %></td>
  <td><%= link_to "delete", @post, method: :delete, data: {confirm: '리얼리?'} %></td>
</tr>

<% end %>
